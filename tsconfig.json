{
    "compilerOptions": {
        "target": "ES2017",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["es2023"],
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "esModuleInterop": true,

        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "tests/**/*",
    ],
    "ts-node": {
        "transpileOnly": true
    }
}
